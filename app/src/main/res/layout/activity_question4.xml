<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#779ECC"
    tools:context="com.example.ekasilabalexcdtb.quizapp.MainActivity">



    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:src="@drawable/androidpictureaaaa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which programming language is not best for app development?"
        android:textColor="#020205"
        android:textSize="18dp"
        android:textStyle="italic"
        android:id="@+id/textView"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/imageButton1111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        android:onClick="Button1111"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/imageButton2222"
        android:layout_alignLeft="@+id/imageButton2222"
        android:layout_alignStart="@+id/imageButton2222" />
    <Button
        android:id="@+id/imageButton2222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python"
        android:onClick="Button2222"
        android:layout_above="@+id/imageButton3333"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />
    <Button
        android:id="@+id/imageButton3333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swift"
        android:onClick="Button3333"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/imageButton4444"
        android:layout_alignLeft="@+id/imageButton4444"
        android:layout_alignStart="@+id/imageButton4444" />
    <Button
        android:id="@+id/imageButton4444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VB.Net"
        android:onClick="Button4444"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton2222"
        android:layout_alignStart="@+id/imageButton2222" />



</RelativeLayout>
